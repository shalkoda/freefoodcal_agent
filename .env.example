# ============================================
# ü§ñ LLM API KEYS (Hybrid Approach)
# ============================================

# üîµ Cohere - Primary event extraction
COHERE_API_KEY=your_cohere_api_key_here
COHERE_MODEL=command-r-plus
COHERE_TEMPERATURE=0.3
COHERE_MAX_TOKENS=1500

# üü¢ Gemini - Spam filtering (free tier helper)
GOOGLE_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# ============================================
# üìß Microsoft Azure (Outlook Email)
# ============================================
MICROSOFT_CLIENT_ID=your_azure_client_id
MICROSOFT_CLIENT_SECRET=your_azure_client_secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:5050/auth/microsoft/callback

# ============================================
# üìÖ Google Cloud (Calendar) TODO: ts is freaked
# ============================================
GOOGLE_CLIENT_ID=...apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=...
GOOGLE_REDIRECT_URI=http://localhost:5050/auth/google/callback

# ============================================
# ‚öôÔ∏è SCANNING CONFIGURATION
# ============================================

# Email search query
EMAIL_SEARCH_QUERY=food OR pizza OR lunch OR breakfast OR dinner OR snacks OR catering

# How often to scan (hours)
SCAN_INTERVAL_HOURS=6

# How many emails to fetch per scan
MAX_EMAILS_PER_SCAN=500

# ============================================
# üéØ FILTERING CONFIGURATION
# ============================================

# Daily Cohere API call budget (stays within 1000/month free tier)
COHERE_DAILY_BUDGET=10000

# Minimum confidence to add event to calendar
MIN_CONFIDENCE_THRESHOLD=0.75

# Gemini filter sensitivity (0.0-1.0, lower = more strict)
GEMINI_FILTER_THRESHOLD=0.5

# ============================================
# üíæ DATABASE
# ============================================
DATABASE_PATH=./database/events.db

# ============================================
# üåê FLASK WEB SERVER
# ============================================
FLASK_SECRET_KEY=your-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_PORT=5050

# ============================================
# üìä ANALYTICS & MONITORING
# ============================================

# Track LLM usage for portfolio metrics
ENABLE_LLM_TRACKING=true

# Log detailed API responses (for debugging)
LOG_LLM_RESPONSES=false
